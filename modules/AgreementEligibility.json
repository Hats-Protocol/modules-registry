      "label": "Current Agreement",
      "functionName": "currentAgreement",
      "displayType": "default"
    },
    {
      "label": "Grace Period Ending",
      "functionName": "graceEndsAt",
      "displayType": "timestamp"
    },
    {
      "label": "Owner Hat",
      "functionName": "OWNER_HAT",
      "displayType": "hat"
    },
    {
      "label": "Arbitrator Hat",
      "functionName": "ARBITRATOR_HAT",
      "displayType": "hat"
    }
  ],
  "type": {
    "eligibility": true,
    "toggle": false,
    "hatter": false
  },
